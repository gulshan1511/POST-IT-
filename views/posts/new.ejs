<%- include ("../partials/header") %>


<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a New posts</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/posts" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="post[name]" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="post[image]" placeholder="image url">
                </div>
                <div class="form-group">
                    <textarea required name="post[description]" id ="" cols="30" rows="10"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/posts">Go back!</a>
        </div>
    </div>
</div>

<%- include ("../partials/footer") %></div>